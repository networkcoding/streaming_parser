{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "name": "Just example of debugging the server with vscode",
            "request": "launch",
            "program": "${workspaceFolder}/build/example_server",
            "args": [
                "--log_console",
                "--log_level=1",
                "--enabled_debug_mode"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build release",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": true,
                "traceResponse": false,
                "trace": false
            }
        },
        {
            "type": "cppdbg",
            "name": "Just example of debugging the client with vscode",
            "request": "launch",
            "program": "${workspaceFolder}/build/example_client",
            "args": [
                "--log_console",
                "--log_level=1",
                "--enabled_debug_mode"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build release",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "engineLogging": true,
                "traceResponse": false,
                "trace": false
            }
        }
    ]
}
